package strings.theory;

import java.util.Scanner;

public class BasicConcepts {
	
	public static void main(String args[])
	{
		
	
	//Strings instantiated as below and printing strings in different ways
	String str = new String ("kiran");
	System.out.println(str);
	
	String str1="pavan";
	System.out.println(str1);
	
	char ch[]={'k','i','r','a','n'};
	String str2=new String(ch);
	System.out.println(str2);
	
	//User Input
	
	Scanner sc = new Scanner(System.in);
	String str3 = sc.next();  //To take single word
	String str4 = sc.nextLine(); //To take multiple word or line
	}
}
